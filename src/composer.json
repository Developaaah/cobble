{
    "name": "developaaah/slim4-eloquent-twig-webpack",
    "description": "Framework starter structure with Slim4, Eloquent, Twig and Webpack",
    "keywords": ["framework", "slim", "slim4", "Webpack", "Eloquent", "Twig"],
    "type": "project",
    "authors": [
        {
            "name": "Dennis Schuster",
            "email": "mail@dennisschuster.net"
        }
    ],
    "require": {
        "slim/slim": "3.12.3",
        "slim/twig-view": "^2.4",
        "illuminate/database": "^5.6",
        "vlucas/phpdotenv": "^4.1",
        "dopesong/slim-whoops": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
